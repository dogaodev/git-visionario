    "resolveJsonModule": true,
    "outDir": "./dist/cjs",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationDir": "./dist/cjs",
    "allowJs": true,
  },
  "include": [
    "src/**/*"
  ]
}